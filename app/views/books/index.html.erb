<body>
 <h1>Books</h1>
<table>
	<thead>
		
			<th>Title</th>
			<th>Body</th>
			<th colspan='3'></th>
		
	</thead>
 <tbody>
  <% @books.each do |book| %>

	
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
		  <td>
			<%= link_to 'Show' ,book_path(book.id), class: "show_#{book.id}" %>
			<%= link_to 'Edit' ,edit_book_path(book.id), class: "edit_#{book.id}" %>
			<%= link_to 'Destroy' ,book_path(book.id), class: "destroy_#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %>
		 </td>
		</tr>
	
  <% end %>
 </tbody>
</table>


<h2>New book</h2>

<%= form_for(@book) do |f| %>

 <h4>Title</h4>
 <div><%= f.text_field :title, class: "book_title" %></div>

 <h4>Body</h4>
 <div><%= f.text_area :body, class: "book_body" %></div>

 <div><%= f.submit 'Create Book' %></div>

<% end %>

</body>


